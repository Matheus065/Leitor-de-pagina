{
  "manifest_version": 3,
  "name": "Leitor e Modificador Básico",
  "version": "1.0",
  "description": "Base para uma extensão de leitura e modificação de páginas web.",
  "action": {
    "default_title": "Abrir Extensão",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting" 
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}